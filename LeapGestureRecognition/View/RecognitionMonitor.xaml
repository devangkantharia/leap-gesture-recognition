<UserControl x:Class="LGR_Controls.RecognitionMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid Background="#DADADA">
		<Border Margin="10" BorderBrush="Black" BorderThickness="1">
			<Grid Margin="10">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Row="0" FontSize="15" FontWeight="Bold" Margin="0 0 0 8">Recognition Monitor</TextBlock>

				<DataGrid Grid.Row="1" ItemsSource="{Binding RankedStaticGestures}" IsReadOnly="True" AutoGenerateColumns="False">
					<DataGrid.Columns>
						<DataGridTextColumn Width="*" Header="Gesture" Binding="{Binding Gesture.Name}" />
						<DataGridTextColumn Width="Auto" Header="Distance" Binding="{Binding Distance}" />
					</DataGrid.Columns>
				</DataGrid>

			</Grid>
		</Border>
	</Grid>
</UserControl>
