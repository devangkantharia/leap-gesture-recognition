<Window x:Class="LeapGestureRecognition.View.RenameGestureDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				Width="300" Height="150"
        Title="Rename Gesture"  WindowStartupLocation="CenterScreen">
	<Grid Margin="20 10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>


		<StackPanel Grid.Row="0" Orientation="Vertical">
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Name: " />
				<TextBox x:Name="gestureNameTB" Width="200" />
			</StackPanel>
			<TextBlock x:Name="errorMessageTB" FontSize="10" Foreground="Red" />
		</StackPanel>

			<WrapPanel Grid.Row="2" HorizontalAlignment="Right">
				<Button IsDefault="True" Click="Save_Button_Click" MinWidth="60" Margin="0,0,10,0">Save</Button>
				<Button IsCancel="True" MinWidth="60">Cancel</Button>
			</WrapPanel>
	</Grid>
</Window>
