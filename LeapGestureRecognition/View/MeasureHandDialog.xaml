<Window x:Class="LeapGestureRecognition.View.MeasureHandDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MeasureHandDialog" Height="200" Width="360">
	<Grid Margin="20 10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>


		<StackPanel Grid.Row="0" Orientation="Vertical">
			<TextBlock TextWrapping="Wrap">
				Place hand over Leap Motion device with all fingers fully extended.
				Press 'Enter' or hit 'Ok" to measure hand.
			</TextBlock>
			<TextBlock x:Name="errorMessageTB" FontSize="10" Foreground="Red" />
		</StackPanel>

		<WrapPanel Grid.Row="2" HorizontalAlignment="Right">
			<Button IsDefault="True" Click="Ok_Button_Click" MinWidth="60" Margin="0,0,10,0">Ok</Button>
			<Button IsCancel="True" MinWidth="60">Cancel</Button>
		</WrapPanel>
	</Grid>
</Window>
